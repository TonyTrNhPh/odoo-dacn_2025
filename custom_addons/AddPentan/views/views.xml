<odoo>
    <!-- List View -->
    <record id="view_hospital_patient_list" model="ir.ui.view">
        <field name="name">hospital.patient.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list string="Hospital Patients">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="address"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Hospital Patient Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="phone"/>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <!-- Root Menu -->
    <menuitem id="menu_hospital_management" name="Hospital Management" sequence="10"/>

    <!-- Child Menu -->
    <menuitem id="menu_hospital_patient" 
              name="Patients" 
              parent="menu_hospital_management" 
              action="action_hospital_patient" 
              sequence="10"/>
</odoo>
