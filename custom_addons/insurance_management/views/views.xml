<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View cho clinic.patient.insurance -->
    <record id="view_clinic_patient_insurance_list" model="ir.ui.view">
        <field name="name">clinic.patient.insurance.list</field>
        <field name="model">clinic.patient.insurance</field>
        <field name="arch" type="xml">
            <list create="false">
                <field name="insurance_number"/>
                <field name="initial_facility"/>
                <field name="tier"/>
                <field name="expiry_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View cho clinic.patient.insurance -->
    <record id="view_clinic_patient_insurance_form" model="ir.ui.view">
        <field name="name">clinic.patient.insurance.form</field>
        <field name="model">clinic.patient.insurance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="insurance_info" string="Thông tin bảo hiểm">
                        <field name="insurance_number"/>
                        <field name="initial_facility"/>
                        <field name="tier"/>
                        <field name="expiry_date"/>
                        <field name="state" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action để truy cập danh sách bảo hiểm -->
    <record id="action_clinic_patient_insurance" model="ir.actions.act_window">
        <field name="name">Quản lý bảo hiểm y tế</field>
        <field name="res_model">clinic.patient.insurance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_insurance_root" name="Quản lý bảo hiểm y tế" action="action_clinic_patient_insurance" sequence="10"/>
</odoo>